<Window x:Class="AssemblyBrowserApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssemblyBrowserApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" Height="45" VerticalAlignment="Top">
            <Button x:Name="btnSearch" Content="Выбрать" Height="22" Width="70" DockPanel.Dock="Right" VerticalAlignment="Top" Margin="10"/>
            <TextBox x:Name="tbAsseblyPath" Text="" Height="22" DockPanel.Dock="Top" VerticalAlignment="Top" Margin="10"/>
        </DockPanel>
        <Button x:Name="btnApply" Content="Применить" DockPanel.Dock="Right" Height="22" Width="70" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"/>
        <TreeView x:Name="tvAssemblyBrowser" Margin="10"/>
    </DockPanel>
</Window>
